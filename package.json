{
  "private": true,
  "scripts": {
    "build": "spago build",
    "build:site": "spago -x site.dhall build",
    "bundle:site": "spago -x site.dhall bundle-app -m Site.Main --to ./public/app.js",
    "format": "purs-tidy format-in-place site/**/*.purs src/**/*.purs test/**/*.purs",
    "postinstall": "spago install && spago -x site.dhall install",
    "server": "live-server --no-browser ./public"
  },
  "devDependencies": {
    "live-server": "^1.2.1",
    "purescript": "^0.14.5",
    "purs-tidy": "^0.7.0",
    "spago": "^0.20.3"
  }
}
